<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10" >

    <TextView
        android:id="@+id/txtId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/shape_row"
        android:gravity="center" />
    

    <TextView
        android:id="@+id/txtVisitLat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />
   

    <TextView
        android:id="@+id/txtVisitLong"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtIsSend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtIsMasfa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtIsVisitLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtIsValid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtGpsDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/txtUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_row"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

</LinearLayout>